<div class="main">
  <div class="container">
    <div class="row">
      <div class="col-md-7">
        <h1>Login</h1>


        <%= form_tag('/login', method: "post") do %>
            <div class="form-group">
             Email: <%= email_field_tag :email %>
            </div>

            <div class="form-group">
              Password: <%= password_field_tag :password %>
            </div>

            <%= submit_tag "Log in" %>
        <% end %>


      </div>
    </div>
  </div>
</div>